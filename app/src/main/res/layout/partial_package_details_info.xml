<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <com.naild2d.android.component.ImageTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:image="@drawable/icon_notebook_pink"
            app:text="产品介绍"
            app:textColor="@color/dark_pink"
            app:textSize="16" />

        <com.naild2d.android.component.ImageTextView
            android:id="@+id/pkg_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:image="@drawable/icon_notebook_pink"
            app:text="1204人做过"
            app:textColor="@color/dark_gray"
            app:textSize="12" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/dark_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pkg_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:text="123123123123123123123"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="统一售后时间，售后15天内" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/dark_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <com.naild2d.android.component.ImageTextView
            android:id="@+id/pkg_evaluation_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            app:image="@drawable/icon_clock_pink"
            app:text="顾客评价（305）"
            app:textColor="@color/dark_pink"
            app:textSize="16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text=">"
            android:textColor="@color/dark_pink"
            android:textSize="24sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/dark_gray" />

    <com.naild2d.android.component.ImageTextView
        android:id="@+id/pkg_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:image="@drawable/icon_notebook_pink"
        app:text="悦色美甲（富力城店）"
        app:textColor="@color/dark_pink"
        app:textSize="16" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/dark_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showSchedule">

        <com.naild2d.android.component.ImageTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:image="@drawable/icon_clock_pink"
            app:text="预约时间"
            app:textColor="@color/dark_pink"
            app:textSize="16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text=">"
            android:textColor="@color/dark_pink"
            android:textSize="24sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/dark_gray" />
</LinearLayout>