<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_border_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/component_service_thumbnail_view_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:padding="3dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/component_service_thumbnail_view_price"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/component_service_thumbnail_view_price"
            android:layout_toStartOf="@+id/component_service_thumbnail_view_price"
            android:src="@drawable/icon_yuan_black" />

        <TextView
            android:id="@+id/component_service_thumbnail_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="126"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <com.naild2d.android.component.ImageTextView
            android:id="@+id/component_service_thumbnail_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:image="@drawable/pkgls_icon_name_pressed"
            app:text="凉宫春日的消失"
            app:textColor="#000000"
            app:textSize="16" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/component_service_thumbnail_view_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/component_service_thumbnail_view_info_panel"
        android:src="@drawable/home_btn_white_13" />
</RelativeLayout>