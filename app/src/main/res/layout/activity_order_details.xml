<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bg_01"
    tools:context="com.naild2d.android.OrderDetails"
    >

    <RelativeLayout
        android:id="@+id/home_head_bar"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:background="@drawable/banner_top_green">

        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pkgls_back"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@android:color/transparent" />
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/item_thumbnail"
            android:layout_margin="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="#FF0000"/>

        <TableLayout
            android:id="@+id/item_info"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/item_price"
            android:layout_toRightOf="@+id/item_thumbnail"
            android:layout_toEndOf="@+id/item_thumbnail"
            android:layout_centerVertical="true">
            <TableRow android:layout_weight="1" android:gravity="center_vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_height="10dp"
                        android:layout_width="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/pkgls_icon_name_pressed"/>
                    <TextView
                        android:id="@+id/pkg_item_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:text="甜美日系新娘款"/>
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_weight="1" android:gravity="center_vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="9sp"
                    android:maxLines="3"
                    android:lines="3"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:text="abcd abcd abcd abcd abcd abcd abcd abcd abcd  abcd abcd abcd"/>
            </TableRow>
            <TableRow android:layout_weight="1" android:gravity="center_vertical">
                <LinearLayout android:orientation="horizontal"  android:gravity="center_vertical">
                    <ImageView
                        android:layout_height="10dp"
                        android:layout_width="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/pkgls_icon_addr_pressed"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:text="甜美日系新娘款"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/item_price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <com.naild2d.android.component.PriceTextView
                android:id="@+id/item_order_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:price="200"
                app:textSize="16"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="10sp"
                android:layout_below="@id/item_order_details_price"
                android:layout_alignRight="@id/item_order_details_price"
                android:layout_alignEnd="@id/item_order_details_price" />

        </RelativeLayout>




    </RelativeLayout>
</LinearLayout>
