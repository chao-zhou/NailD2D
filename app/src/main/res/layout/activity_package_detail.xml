<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.naild2d.android.PackageDetailActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_adv"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:src="#FFFFFF"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_below="@+id/home_head_bar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-20dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:src="@drawable/pkgdetail_price_bg"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"/>

            <RelativeLayout
                android:id="@+id/home_head_bar"
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/pkgls_top_bar">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/pkgls_back"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_marginTop="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:text="甜美日系新娘"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/pkgls_loc_normal"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent" />
            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
