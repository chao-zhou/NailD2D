<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="NailD2D_TopBarLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="NailD2D_TopBarBackButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="NailD2D_TopBarCenterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="NailD2D_TopBarRightImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
